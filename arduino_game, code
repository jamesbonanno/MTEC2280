#define echoPin 12

int sensorValue = 0;
int multiValue = 0;
int highR=1023;
int lowR=0;
int mapped = 0;
int ledPin8 = 7;
int ledPin7 = 6;
int ledPin6 = 5;
int ledPin = 4;
int switchPin = 13;
int switchRead = 0;
int counter = 0;
int reading = 0;
int sensorPin = A0;


boolean pressing = false;


boolean check = true;
boolean check1 = true;
boolean check2 = true;
boolean check3 = true;
boolean check4 = true;

void setup() {
  
Serial.begin(9600);
pinMode(ledPin6, OUTPUT);
pinMode(ledPin7, OUTPUT);
pinMode(ledPin8, OUTPUT);
pinMode(ledPin, OUTPUT);
pinMode(switchPin, INPUT);
pinMode(trigPin, OUTPUT);
pinMode(echoPin, INPUT);

}

void loop(){

 long duration, distance;
  digitalWrite(trigPin, LOW);  // Added this line
  delayMicroseconds(2); // Added this line
  digitalWrite(trigPin, HIGH);
//  delayMicroseconds(1000); - Removed this line
  delayMicroseconds(10); // Added this line
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance = (duration/2) / 29.1;
  
  if ((distance < 4 )&&(check4==true)) {

    Serial.println("Complete 4");
    check4=false;
  }



reading = analogRead(sensorPin);
int celsius = reading/2;
if((celsius>=30)&&(check3==true)){
  Serial.println("Complete 3");
  check3=false;
  
}

  
  switchRead = digitalRead(switchPin);
  //Serial.println(switchRead);

  if(switchRead == 1){
    pressing = true;
  }

  if(switchRead == 0 && pressing == true){
    pressing = false;
    //do something
    //counter = counter + 1;
    counter++;
    Serial.println(counter);
  }

  if(counter >= 4){
    counter = 0;
  }
  if ((counter == 3) && (check1=true)) {
    digitalWrite(ledPin, HIGH);
    Serial.println("Complete 2");
    tone(8,1000);
    check1 = false;
    counter++;
    
  }
  if(counter == 0){
      digitalWrite(ledPin, LOW);
    }


if(multiValue>=60){
   digitalWrite(ledPin6, LOW);
  digitalWrite(ledPin7, LOW);
  digitalWrite(ledPin8, LOW);
  noTone(8);

 
}
else if((multiValue<60) && (multiValue>=50)){
  digitalWrite(ledPin6, LOW);
  digitalWrite(ledPin7, LOW);
  digitalWrite(ledPin8, HIGH);
  noTone(8);
   
  
}
else if((multiValue<50) && (multiValue>=40)){
  digitalWrite(ledPin6, LOW);
  digitalWrite(ledPin7, HIGH);
  digitalWrite(ledPin8, LOW);
  noTone(8);
   
}
else if((multiValue<40) && (multiValue>=30)){
  digitalWrite(ledPin6, HIGH);
  digitalWrite(ledPin7, LOW);
  digitalWrite(ledPin8, LOW);
   tone(8,1000);
}
else
{
  digitalWrite(ledPin6, HIGH);
  digitalWrite(ledPin7, HIGH);
  digitalWrite(ledPin8, HIGH);
  noTone(8);
 
}

  
if(multiValue<40 && multiValue>=30 && check==true)
{
   Serial.println("Complete 1");
   check = false;
  

}
multiValue= analogRead(A1);




  //mapped = map(sensorValue, highR, lowR, 0, 255);
  //analogWrite(ledPin, mapped);


}
